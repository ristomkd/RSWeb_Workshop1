@model workshop_1.Models.Enrollment

@{
    ViewData["Title"] = "Create Enrollment";
}

<h1>Create</h1>
<h4>Enrollment</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- CourseId = hidden -->
            <input type="hidden" name="CourseId" value="@ViewBag.CourseId" />

            <!-- Student dropdown -->
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId"
                        class="form-control"
                        asp-items="ViewBag.StudentId">
                    <option value="">-- Select Student --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Semester" class="control-label"></label>
                <input asp-for="Semester" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="SeminarUrl" class="control-label"></label>
                <input asp-for="SeminarUrl" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="ProjectUrl" class="control-label"></label>
                <input asp-for="ProjectUrl" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="ExamPoints" class="control-label"></label>
                <input asp-for="ExamPoints" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="SeminarPoints" class="control-label"></label>
                <input asp-for="SeminarPoints" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="ProjectPoints" class="control-label"></label>
                <input asp-for="ProjectPoints" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="AdditionalPoints" class="control-label"></label>
                <input asp-for="AdditionalPoints" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="FinishDate" type ="datetime-local" class="control-label"></label>
                <input asp-for="FinishDate" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"
       asp-route-courseId="@ViewBag.CourseId">
        Back to List
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
