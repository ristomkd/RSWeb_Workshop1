@model IEnumerable<workshop_1.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-3">
            <label class="form-label">Title</label>
            <input type="text"
                   name="title"
                   value="@Context.Request.Query["title"]"
                   class="form-control" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Semester</label>
            <input type="number"
                   name="semester"
                   value="@Context.Request.Query["semester"]"
                   class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Programme</label>
            <input type="text"
                   name="programme"
                   value="@Context.Request.Query["programme"]"
                   class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Teacher</label>
            <select name="teacherId"
                    class="form-select"
                    asp-items="@(new SelectList(ViewBag.Teachers, "Id", "FullName", ViewBag.SelectedTeacherId))">
                <option value="">-- All teachers --</option>
            </select>
        </div>

        <div class="col-12 mt-2">
            <button type="submit" class="btn btn-primary">
                Filter
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                Clear
            </a>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstTeacher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondTeacher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Programme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstTeacher!.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondTeacher!.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                
                    @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a asp-action="EnrollStudents" asp-route-id="@item.Id">Enroll</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <text> | </text>
                    }

            </td>
        </tr>
}
    </tbody>
</table>
